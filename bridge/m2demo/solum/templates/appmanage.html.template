        <center>
            <canvas id="buildstatus" height="100" width="0"></canvas>
        </center>
    </div>
            <table class="table table-hover table-condensed" width=60%>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Version</th>
                        <th>Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>1</th>
                        <td>MyJavaApp</td>
